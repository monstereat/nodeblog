extends ../layout

block content
  form.password-pull.form-signin.form-register(method="post", action="/admin/users/password")
      h2.form-signin-heading 更改密码

      != messages()
      label.sr-only(for="email") 邮箱
      input.email.form-control(name="email", type="email", value=user.email, autofocus="", readonly)

      label.sr-only(for="password") 新密码
      input.password.form-control(name="password", type="password", placeholder="last password", required="")

      label.sr-only(for="confirmPassword") 重复密码
      input.confirm-password.form-control(name="confirmPassword", type="password", placeholder="Password", required="")

      button.btn.btn-lg.btn-primary.btn-block(type="submit") 修改
