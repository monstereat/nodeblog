extends ../layout

append css
  link(rel='stylesheet', href='/components/fontawesome/web-fonts-with-css/css/fontawesome-all.css')
  link(rel='stylesheet', href='/css/blog.css')

block main
  .container
    block header
      header.blog-header.py-3
          .row.flex-nowrap.justify-content-between.align-items-center
            .col-4.pt-1
              a.text-muted(href="#")
            .col-4.text-center
              a.blog-header-logo.text-dark(href="#") Node 博客系统
            .col-4.d-flex.justify-content-end.align-items-center
              form.navbar-form.pull-right(method="get", action="/posts/")
                input.form-control(type="text", name="keyword", placeholder="搜索...")
              a.btn.btn-sm.btn-outline-secondary(href="admin/users/login") Sign up

      .nav-scroller.py-1.mb-2
        nav.nav.d-flex.justify-content-between
          a.p-2.text-muted(href="/posts") 首页



          a.p-2.text-muted(href="/about") 关于

          a.p-2.text-muted(href="/contact") 联系


  main.container(role="main")
    .row
      .col-md-8.blog-main
        != messages()
        block content
      aside.col-md-4.blog-sidebar
        .p-3.mb-3.bg-light.rounded
         h4.font-italic About Blog
         p.mb-0
           | Front-end: Bootstrap Fontawesome  Back-end: Express Jade Validator Session Passport MongoDB Mongoose  Tools: NPM Bower Gulp Yoeman.

        .p-3
         h4.font-italic 文章分类
         ol.list-unstyled.mb-0
           each category in categories
             li
               a(href="/posts/category/"+category.name, target="_blank")=category.name



    block footer
      footer.blog-footer
        p
          NodeBlog by chenda yikouchile@163.com
        p
          a(href="#")  回到顶部
          &nbsp;&nbsp;&nbsp;&nbsp;
          a(href="admin/users/login") 用户登陆
          &nbsp;&nbsp;&nbsp;&nbsp;
          a(href="admin/users/register") 用户注册
